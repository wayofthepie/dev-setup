{
  /* "coc.preferences.hoverTarget": "echo", */
  /* "coc.preferences.enableFloatHighlight": false,*/
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "javascript",
    "typescript",
    "typescriptreact",
    "java",
    "json",
    "jsonc",
    "python",
    "rust",
    "yaml",
    "c",
    "dart"
  ],
  "codeLens.enable": true,
  "codeLens.separator": "~",
  "flutter.trace.server": "verbose",
  "flutter.lsp.debug": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "prettier.formatterPriority": 100,
  "suggest.detailMaxLength": 200,
  "yaml.format.enable": true,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.errors.incompleteClasspath.severity": "ignore",
  "python.jediEnabled": false,
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "signature.target": "echo",
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "suggest.noselect": false,
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "languageserver": {
    "efm": {
      /* go get github.com/mattn/efm-langserver/cmd/efm-langserver */
      /* yarn global add markdownlint-cli */
      "command": "efm-langserver",
      "filetypes": ["markdown"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  }
}
